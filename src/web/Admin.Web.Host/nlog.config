            cc="Layout"
            from="Layout"
            body="Layout"
            smtpUserName="Layout"
            enableSsl="Boolean"
            secureSocketOption="None|Auto|SslOnConnect|StartTls|StartTlsWhenAvailable"
            smtpPassword="Layout"
